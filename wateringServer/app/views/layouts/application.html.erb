<!DOCTYPE html>
<html>
  <head>
    <title>WateringServer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if current_user %>
          <li>
            <%= link_to 'Logout', logout_path, method: :delete %>
          </li>
        <% else %>
        <% end %>
      </ul>
    </nav>
    <%= yield %>
  </body>
</html>
