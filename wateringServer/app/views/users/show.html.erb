<p>
  <%= @user.email %>
</p>
<ul>
  <% @plants.each do |plant| %>
      <li><%= link_to "#{plant.name}", plant %></li>
        <ul>
        <% if plant.latest_watering %>
          <li>Days since watering: <%= plant.days_since_watering %></li>
          <li>Amount: <%= plant.latest_watering.amount %></li>
        <% end %>
        <% if plant.needs_water? %>
          <li>Needs water</li>
        <% end %>
      </ul>
  <% end %>
</ul>
<%= link_to 'New Plant', new_plant_path %>
